{
    "version": 2,
    "builds": [
        {
            "src": "api/index.php",
            "use": "@vercel/php"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/build/(.*)",
            "dest": "/public/build/$1"
        },
        {
            "src": "/storage/(.*)",
            "dest": "/public/storage/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.php"
        }
    ],
    "env": {
        "APP_ENV": "production",
        "APP_DEBUG": "false",
        "APP_URL": "https://your-url.vercel.app",
        "APP_KEY": "base64:your-app-key",

        "CACHE_DRIVER": "array",
        "SESSION_DRIVER": "cookie",
        "LOG_CHANNEL": "stderr",

        "DB_CONNECTION": "mysql",
        "DB_HOST": "metro.proxy.rlwy.net",
        "DB_PORT": "39147",
        "DB_DATABASE": "puzallarentcar",
        "DB_USERNAME": "root",
        "DB_PASSWORD": "JzbTVcopKULjdKQxpUouWipCLNXFUWmg"
    }
}
